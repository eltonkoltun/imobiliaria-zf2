<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta name="google-site-verification" content="-p5kWsP3u8LWKAfKGitQH7h8dGiChlxA5A9vBco6WUI">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block meta %}{% endblock meta %}
        <title>{% block title %}{{ constant('APP_NAME') }}{% endblock title %}</title>
        <link href="{{ basePath('/assets/bootstrap/css/bootstrap.min.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ basePath('/assets/application/css/estilos.css') }}" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ basePath('/assets/application/css/colorbox/colorbox.css') }}" media="screen" rel="stylesheet" type="text/css">
        {% block style %}{% endblock style %}
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        <script type="text/javascript" src="{{ basePath('/assets/jquery/jquery-1.10.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/jquery/jquery-ui-1.10.4.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/application/js/jquery.remoteform.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/application/js/jquery.maskedinput.min.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/application/js/jquery.maskMoney.js') }}"></script>
        <script type="text/javascript" src="{{ basePath('/assets/application/js/colorbox/jquery.colorbox-min.js') }}"></script>
        {% block headScript %}{% endblock headScript %}
    </head>
    <body class="{{ bodyClass() }}">
        <div id="wrap">
            <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <span class="promocao">No Loop - Imobiliária</span>
                    {{ navigation('application.navigation').menu().setUlClass('nav navbar-nav').setPartial('shift.partial.bootstrap_menu')|raw }}
                </div>
            </div>
            <div class="container">
                <div id="flash">{{ flash() }}</div>
                {# o filtro '|raw' no content abaixo permite que as views possam ser, além do twig, em phtml padrão #}
                {% block content %}{{ content|raw }}{% endblock content %}
            </div>
        </div>
        <div id="footer">
            <div class="container">
                <p class="text-muted">
                    <span><strong>{{ constant('APP_NAME') }}</strong> - No Loop &copy; 2014</span>
                    <span class="pull-right"><strong>{{ nomeUsuarioLogado() }}</strong> - v{{ constant('APP_VERSION') }} - {{ usedMemory() }}</span>
                </p>
            </div>
        </div>
        {% block inlineScript %}{% endblock inlineScript %}
        {{ highlight() }}
        {# Analytics #}
        <script type="text/javascript">
            (function(i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o), m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-43561241-13', 'promomaespersonnalite2014.com.br');
            ga('send', 'pageview');
        </script>
    </body>
</html>
